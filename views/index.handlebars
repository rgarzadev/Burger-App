<div id="main-container">
  <img src="/assets/img/burger-image.png" alt="burger image" width="150" height="150">
  <h1 id="title">Eat-Da-Burger!</h1>

  <div id="flex-container">
    <div id="not-devoured">
    <h2>Burgers that are not devoured!</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      <li>
        {{burger_name}}
        <button class="change-status" data-name="{{burger_name}}"data-id="{{id}}" data-newDevoured="{{devoured}}">
          Devour
        </button>
      </li>

      {{/unless}}
      {{/each}}
    </ul>
  
    </div>
  
    <div id="devoured">
    <h2>Burgers that are devoured!</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      <li>
        {{burger_name}}
        <button class="delete-burger" data-id="{{this.id}}">Delete</button>
      </li>
      {{/if}}
      {{/each}}
    </ul>
    </div>

  </div>


  <div id="add-burger">
    <h2>Add a Burger!</h2>
    <form class="create-form">

      <div class="form-group"> 
        <input type="text" id="burger" name="name" placeholder="Enter burger name...">
      </div>

      <div class="form-group">
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not Devoured!
      </div>

      <button class="button" type="submit">Add Burger</button>
    </form>

  </div>

</div>
